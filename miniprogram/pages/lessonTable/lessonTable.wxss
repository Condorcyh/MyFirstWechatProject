
.top{
  display: flex;
  flex-direction: row;
  margin-left: 35rpx;
  background-color: #d2e6b3;
  color: #7cba23;
}

.top-text{
  width: 100rpx;
  height: 35rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.left{
  width: 35rpx;
  height: 100rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.lessonTable-item {
  width: 95rpx;
  height: 100px;
  position: absolute;
  justify-content: space-evenly;
  display: flex;
  flex-direction: column;
  border-radius: 5px;
}

.info {
  font-size: 8pt;
  color: #fff;
  padding-left: 2px;
}

.scroll {
  height: 1170rpx;
  z-index: 101;
  position: fixed;
}

.todo{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  width: 1000rpx;
}

.editLesson{
  margin-left: 100rpx;
  width: 180rpx;
  border-width: 1rpx;
