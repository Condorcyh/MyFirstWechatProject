
.background {
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index: -1;
}

.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    line-height: 80rpx;
}

.detail {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.bar {
    display: flex;
    flex-direction: row;
    margin: 20rpx 0;
}

.box {
    width: 33.3%;
    text-align: center;
}

/* 全局文本 */
text {
    font-size: 30rpx;
}

.container image {
    width: 200rpx;
    height: 200rpx;
}