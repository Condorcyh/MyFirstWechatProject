.footer {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #777;
}

.footer .btn{
  margin-left: 13rpx;
}

.footer .itemLeft{
  margin-right: 10rpx;
}

.tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tip .title {
  font-size: 60rpx;
  margin: 200rpx 50rpx 50rpx;
  color: #444;
}

.tip .content {
  color: #666;
  text-align: center;
}
